task backaway()
     {
     SetSensorTouch(IN_3);
     SetSensorTouch(IN_4);

     if (SENSOR_3 == 1)
     {
     OnRev(OUT_B,90);
     OnRev(OUT_C,-90);
     }
     else if (SENSOR_4 ==1)
     {
    OnFwd(OUT_B,90);
    OnFwd(OUT_C,-90);
     }
     }

task main(){
     Precedes(movinguntilsensor, backaway);  //kick
     SetSensorLowspeed(S1); //SetSensorLowspeed(IN_2);
     SetSensorTouch(IN_3); SetSensorTouch(IN_4);
}


